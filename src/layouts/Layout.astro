---
import AsideMenu from "../components/AsideMenu.astro";
import { ViewTransitions } from "astro:transitions";
import { Player } from "@/components/Player.jsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="GaloDev - Desarrollador Full Stack | Portafolio profesional"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts: Space Grotesk + IBM Plex Sans + JetBrains Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;700&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions fallback="none" />
  </head>
  <body class="bg-void text-text font-body">
    <div id="app" class="relative h-screen p-2 gap-2">
      <aside class="[grid-area:aside] flex-col flex overflow-y-auto">
        <AsideMenu />
      </aside>
      <main
        class="[grid-area:main] rounded-lg bg-surface overflow-y-auto w-full relative"
      >
        <!-- Dot grid background -->
        <div
          class="absolute inset-0 bg-dot-grid opacity-30 pointer-events-none"
        >
        </div>
        <div class="relative z-10">
          <slot />
        </div>
      </main>

      <footer class="[grid-area:player] h-[80px]">
        <Player client:load transition:name="media-player" transition:persist />
      </footer>
    </div>

    <style>
      #app {
        display: grid;
        grid-template-areas:
          "aside main main"
          "player player player";
        grid-template-columns: 350px 1fr;
        grid-template-rows: 1fr auto;
      }
    </style>
    <style is:global>
      :root {
        /* Tokyo Night CSS Custom Properties */
        --color-void: #0f0f14;
        --color-surface: #1a1b26;
        --color-surface-light: #24283b;
        --color-surface-lighter: #414868;

        --color-accent-cyan: #7dcfff;
        --color-accent-magenta: #bb9af7;
        --color-accent-violet: #9d7cd8;
        --color-accent-pink: #f7768e;
        --color-accent-green: #9ece6a;
        --color-accent-orange: #ff9e64;
        --color-accent-blue: #7aa2f7;

        --color-text: #c0caf5;
        --color-text-muted: #565f89;
        --color-text-bright: #ffffff;

        /* Transition timing */
        --ease-out-cubic: cubic-bezier(0.22, 1, 0.36, 1);
      }

      html {
        font-family: "IBM Plex Sans", system-ui, sans-serif;
        background: var(--color-void);
        color: var(--color-text);
      }

      /* Headings use Space Grotesk */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Space Grotesk", system-ui, sans-serif;
      }

      /* Mono text */
      code,
      pre,
      .font-mono {
        font-family: "JetBrains Mono", monospace;
      }

      /* Scrollbar styling */
      ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
      }

      ::-webkit-scrollbar-track {
        background: var(--color-surface);
      }

      ::-webkit-scrollbar-thumb {
        background: var(--color-surface-lighter);
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: var(--color-accent-cyan);
      }

      /* Selection styling */
      ::selection {
        background: var(--color-accent-magenta);
        color: var(--color-void);
      }

      /* Snappy transitions for interactive elements */
      a,
      button {
        transition: all 0.2s var(--ease-out-cubic);
      }

      /* Technical badge style */
      .badge {
        font-family: "JetBrains Mono", monospace;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 0.25rem 0.5rem;
        border: 1px solid rgba(125, 207, 255, 0.3);
        border-radius: 4px;
      }

      /* Glassmorphism card */
      .glass-card {
        background: rgba(26, 27, 38, 0.8);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(125, 207, 255, 0.1);
      }

      /* Typing animation */
      .typing-effect {
        overflow: hidden;
        border-right: 2px solid var(--color-accent-cyan);
        white-space: nowrap;
        animation:
          typing 3s steps(40, end),
          blink-caret 0.75s step-end infinite;
      }

      @keyframes typing {
        from {
          width: 0;
        }
        to {
          width: 100%;
        }
      }

      @keyframes blink-caret {
        from,
        to {
          border-color: transparent;
        }
        50% {
          border-color: var(--color-accent-cyan);
        }
      }

      /* Metadata style for decorative elements */
      .metadata {
        font-family: "JetBrains Mono", monospace;
        font-size: 0.7rem;
        color: var(--color-text-muted);
        letter-spacing: 0.02em;
      }

      /* Version badge */
      .version-badge::before {
        content: "v";
      }
    </style>
    <script is:inline>
      // Bloquear menÃº del click derecho
      document.addEventListener("contextmenu", (e) => {
        e.preventDefault();
      });
    </script>
  </body>
</html>
