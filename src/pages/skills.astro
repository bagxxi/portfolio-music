---
import Layout from "../layouts/Layout.astro";
import { skillCategories } from "@/lib/portfolio";
---

<Layout title="Skills | GaloDev Portfolio">
  <div class="relative px-8 py-12">
    <!-- Page header -->
    <header class="mb-12 max-w-4xl">
      <span class="metadata block mb-4">// skills.json</span>
      <h1 class="font-display text-5xl font-bold text-text-bright mb-4">
        <span class="text-accent-green">{"{"}</span>Skills<span class="text-accent-green">{"}"}</span>
      </h1>
      <p class="text-text-muted text-lg">
        Mi stack tecnológico y herramientas que utilizo en el día a día.
      </p>
    </header>

    <!-- Skills by Category -->
    <div class="space-y-8">
      {skillCategories.map((category) => (
        <section class="glass-card rounded-xl p-6">
          <div class="flex items-center gap-3 mb-6 pb-4 border-b border-surface-lighter/30">
            <span class="text-2xl">{category.icon}</span>
            <h2 class="font-display text-2xl font-bold text-text-bright">{category.name}</h2>
            <span class="metadata ml-auto">// {category.skills.length} items</span>
          </div>
          
          <!-- Skills as "tracks" -->
          <div class="space-y-3">
            {category.skills.map((skill, index) => (
              <div class="flex items-center gap-4 px-4 py-3 rounded-lg hover:bg-surface-light/50 group transition-colors">
                <span class="text-text-muted text-sm w-6 font-mono">{String(index + 1).padStart(2, '0')}</span>
                
                <div 
                  class="w-2 h-2 rounded-full"
                  style={`background-color: ${skill.color}`}
                ></div>
                
                <span class="flex-1 font-medium text-text group-hover:text-text-bright transition-colors">
                  {skill.name}
                </span>
                
                <!-- Level indicator -->
                <div class="flex gap-1 items-center">
                  {[1, 2, 3, 4, 5].map((level) => (
                    <div 
                      class={`w-3 h-3 rounded-sm transition-colors ${
                        level <= skill.level 
                          ? 'bg-accent-cyan' 
                          : 'bg-surface-lighter/50'
                      }`}
                    ></div>
                  ))}
                </div>
                
                <span class="text-text-muted text-xs font-mono w-12 text-right">
                  {skill.level}/5
                </span>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>

    <!-- Terminal decoration -->
    <section class="mt-12 glass-card rounded-xl p-6">
      <div class="flex items-center gap-2 mb-4">
        <div class="w-3 h-3 rounded-full bg-accent-pink"></div>
        <div class="w-3 h-3 rounded-full bg-accent-orange"></div>
        <div class="w-3 h-3 rounded-full bg-accent-green"></div>
        <span class="text-text-muted text-xs ml-2">terminal</span>
      </div>
      <pre class="font-mono text-sm text-text-muted">
<span class="text-accent-cyan">$</span> npm list --depth=0
<span class="text-accent-green">galodev</span>@2.0.0
├── <span class="text-accent-magenta">react</span>@18.x
├── <span class="text-accent-magenta">astro</span>@4.x
├── <span class="text-accent-magenta">tailwindcss</span>@3.x
├── <span class="text-accent-magenta">python</span>@3.x
└── <span class="text-accent-magenta">django</span>@4.x

<span class="text-accent-cyan">$</span> <span class="animate-pulse">_</span>
      </pre>
    </section>

    <!-- Background decoration -->
    <div class="absolute top-40 right-20 w-72 h-72 bg-accent-green/5 rounded-full blur-3xl -z-10"></div>
  </div>
</Layout>
