---
// Redirect page to LinkedIn profile
const linkedinUrl = "https://www.linkedin.com/in/gabrielbalbontin/";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="refresh" content="0; url={linkedinUrl}" />
        <link rel="canonical" href={linkedinUrl} />
        <title>Redirigiendo a LinkedIn...</title>
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family:
                    system-ui,
                    -apple-system,
                    sans-serif;
                background: linear-gradient(135deg, #0f0f14 0%, #1a1b26 100%);
                color: #c0caf5;
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
            }
            .container {
                text-align: center;
                padding: 2rem;
            }
            .spinner {
                width: 50px;
                height: 50px;
                border: 4px solid rgba(125, 207, 255, 0.2);
                border-top-color: #7dcfff;
                border-radius: 50%;
                animation: spin 1s linear infinite;
                margin: 0 auto 1.5rem;
            }
            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }
            h1 {
                font-size: 1.5rem;
                margin: 0 0 0.5rem;
                color: #7dcfff;
            }
            p {
                margin: 0;
                color: #565f89;
            }
            a {
                color: #bb9af7;
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="spinner"></div>
            <h1>Redirigiendo a LinkedIn...</h1>
            <p>
                Si no eres redirigido automáticamente, <a href={linkedinUrl}
                    >haz clic aquí</a
                >.
            </p>
        </div>

        <script>
            // JavaScript redirect as fallback
            window.location.href = "{linkedinUrl}";
        </script>
    </body>
</html>
