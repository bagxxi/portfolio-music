---
import Layout from "../layouts/Layout.astro";
import { personalInfo, socialLinks } from "@/lib/portfolio";
---

<Layout title="Contacto | GaloDev Portfolio">
  <div class="relative px-8 py-12 max-w-4xl mx-auto">
    <!-- Page header -->
    <header class="mb-12">
      <span class="metadata block mb-4">// contact.send()</span>
      <h1 class="font-display text-5xl font-bold text-text-bright mb-4">
        <span class="text-accent-pink">‚Üí</span> Contacto
      </h1>
      <p class="text-text-muted text-lg">
        ¬øTienes un proyecto en mente? ¬°Hablemos!
      </p>
    </header>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Info -->
      <section class="glass-card rounded-xl p-6">
        <h2 class="font-display text-xl font-bold text-text-bright mb-6 flex items-center gap-2">
          <span class="text-accent-cyan">$</span> info
        </h2>
        
        <div class="space-y-4">
          <div class="flex items-center gap-4 p-3 rounded-lg bg-surface-light/30">
            <span class="text-xl">‚úâÔ∏è</span>
            <div>
              <span class="text-text-muted text-sm block">Email</span>
              <a href={`mailto:${personalInfo.email}`} class="text-accent-magenta hover:underline">
                {personalInfo.email}
              </a>
            </div>
          </div>
          
          <div class="flex items-center gap-4 p-3 rounded-lg bg-surface-light/30">
            <span class="text-xl">üíª</span>
            <div>
              <span class="text-text-muted text-sm block">GitHub</span>
              <a href={personalInfo.github} target="_blank" rel="noopener" class="text-accent-magenta hover:underline">
                github.com/bagxxi
              </a>
            </div>
          </div>
          
          <div class="flex items-center gap-4 p-3 rounded-lg bg-surface-light/30">
            <span class="text-xl">üìç</span>
            <div>
              <span class="text-text-muted text-sm block">Ubicaci√≥n</span>
              <span class="text-text">{personalInfo.location}</span>
            </div>
          </div>
          
          <div class="flex items-center gap-4 p-3 rounded-lg bg-surface-light/30">
            <span class="text-xl">üü¢</span>
            <div>
              <span class="text-text-muted text-sm block">Estado</span>
              <span class="text-accent-green">{personalInfo.status}</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Social Links as Playlist -->
      <section class="glass-card rounded-xl p-6">
        <h2 class="font-display text-xl font-bold text-text-bright mb-6 flex items-center gap-2">
          <span class="text-accent-cyan">$</span> social.links
        </h2>
        
        <div class="space-y-2">
          {socialLinks.map((link, index) => (
            <a 
              href={link.url} 
              target="_blank" 
              rel="noopener"
              class="flex items-center gap-4 p-4 rounded-lg hover:bg-surface-light/50 group transition-all border border-transparent hover:border-accent-cyan/30"
            >
              <span class="text-text-muted text-sm font-mono w-6">{String(index + 1).padStart(2, '0')}</span>
              <div class="flex-1">
                <span class="text-text-bright group-hover:text-accent-cyan transition-colors font-medium">
                  {link.name}
                </span>
              </div>
              <span class="text-text-muted group-hover:text-accent-magenta transition-colors">‚Üí</span>
            </a>
          ))}
        </div>
        
        <!-- Terminal style CTA -->
        <div class="mt-6 pt-6 border-t border-surface-lighter/30">
          <div class="font-mono text-sm text-text-muted">
            <span class="text-accent-cyan">$</span> Respondo en <span class="text-accent-green">&lt; 24h</span>
          </div>
        </div>
      </section>
    </div>

    <!-- Decorative Terminal -->
    <section class="mt-12 glass-card rounded-xl p-6">
      <div class="flex items-center gap-2 mb-4">
        <div class="w-3 h-3 rounded-full bg-accent-pink"></div>
        <div class="w-3 h-3 rounded-full bg-accent-orange"></div>
        <div class="w-3 h-3 rounded-full bg-accent-green"></div>
        <span class="text-text-muted text-xs ml-2">message.sh</span>
      </div>
      <pre class="font-mono text-sm">
<span class="text-accent-cyan">#!/bin/bash</span>

<span class="text-text-muted"># Opciones de contacto</span>
<span class="text-accent-green">SUBJECT</span>="Proyecto Web"
<span class="text-accent-green">TYPE</span>=["freelance" | "colaboraci√≥n" | "consultor√≠a"]

<span class="text-text-muted"># Enviar mensaje</span>
<span class="text-accent-magenta">curl</span> -X POST \
  -H "Content-Type: application/json" \
  -d '{"{"}
    "from": "tu@email.com",
    "subject": $SUBJECT,
    "message": "¬°Hola GaloDev!"
  {"}"}'  \
  <a href={`mailto:${personalInfo.email}`} class="text-accent-cyan hover:underline">{personalInfo.email}</a>
      </pre>
    </section>

    <!-- Background decoration -->
    <div class="absolute top-20 right-10 w-80 h-80 bg-accent-pink/5 rounded-full blur-3xl -z-10"></div>
  </div>
</Layout>
